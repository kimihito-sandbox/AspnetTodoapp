<h1 class="text-2xl font-bold mb-4">新しい Todo を作成</h1>

<form asp-action="Create" asp-controller="Todo" method="post" class="space-y-4">
<div>
  <label for="title" class="block mb-1">タイトル</label>
  <input type="text" name="title" id="title" class="border rounded px-3 py-2 w-full" placeholder="やることを入力" />
</div>
<div class="flex gap-2">
  <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">
    作成
  </button>
  <a asp-action="New" asp-controller="Todo" class="bg-gray-300 text-black px-4 py-2 rounded">
    キャンセル
  </a>
</div>
</form>
